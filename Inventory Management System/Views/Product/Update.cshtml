@model ProductUpdateViewModel

@{
    ViewData["Title"] = "Update Product";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/plugins/select2/css/select2.min.css" />
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Product Edit</h4>
            <h6>Update your product</h6>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Update" asp-controller="Product" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="CategoryId"></label>
                            <select asp-for="CategoryId" class="form-control select" asp-items="ViewBag.Categories"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="BrandId"></label>
                            <select asp-for="BrandId" class="form-control select" asp-items="ViewBag.Brands"></select>
                            <span asp-validation-for="BrandId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="SKU"></label>
                            <input asp-for="SKU" class="form-control" />
                            <span asp-validation-for="SKU" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="Quantity"></label>
                            <input asp-for="Quantity" type="number" min="0" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="DiscountedPrice"></label>
                            <input asp-for="DiscountedPrice" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Product Images</label>
                            <input type="file" name="productImages" multiple class="form-control" />
                        </div>
                    </div>

                    @if (Model.ProductImages != null && Model.ProductImages.Any())
                    {
                        <div class="col-lg-12">
                            <div class="product-list">
                                <ul class="row">
                                    @foreach (var img in Model.ProductImages)
                                    {
                                        <li class="col-3">
                                            <div class="productviews">
                                                <div class="productviewsimg">
                                                    <img src="@(
                                            Model.ProductImages != null && Model.ProductImages.Any()
                                            ? Url.Content($"/assets/img/product/{img}")
                                            : Url.Content("~/assets/img/product/product-default.png")
                                        )" alt="Product Image" />
                                                </div>
                                                <div class="productviewscontent">
                                                    <div class="productviewsname">
                                                        <h2>@System.IO.Path.GetFileName(img.Image)</h2>
                                                    </div>
                                                    <a asp-action="DeleteImage" asp-route-id="@img.Id" class="hideset">x</a>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }

                    <div class="col-lg-12">
                        <div class="form-group form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-submit me-2">Update</button>
                        <a asp-action="Index" asp-controller="Product" class="btn btn-cancel">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select').select2();
        });
    </script>
}
